
@model IEnumerable<Product>

@{
    ViewBag.Title = "ProductsInCategory";
    string CategoryName = ViewBag.CategoryName;
}

@{
    if (Model.Count() > 0)
    {
        <h2>Products In Category @Model.ElementAt(0).Category.ParentCategory.CategoryName</h2>
    }
    else
    {
        <h2>No Products for Category @CategoryName</h2>
    }
}

@{
    foreach (Product item in Model)
    {
        <h6>Main Category Name : @item.Category.ParentCategory.CategoryName</h6>
        <h6>Sub Category Name : @item.Category.CategoryName</h6>
        <h6>Product Name : @item.ProductName</h6>
        @Html.ActionLink("Se produkter i subkategori : " + @item.Category.CategoryName, "ProductsInSubCategory", "Home", new { id = @item.CategoryID }, new { @class = "" })
        <br />
    }
}

