@model IEnumerable<CategoriesSubCategories.Models.Product>

@{
    ViewBag.Title = "ProductsInSubCategory";
}

@{
    if (Model.Count() > 0)
    {
        <h2>Products In SubCategory </h2>
    }
    else
    {
        <h2>No Products for choosen SubCategory</h2>
    }
}

@{
    foreach (Product item in Model)
    {
        <h6>Main Category Name : @item.Category.ParentCategory.CategoryName</h6>
        <h6>Sub Category Name : @item.Category.CategoryName</h6>
        <h6>Product Name : @item.ProductName</h6>
        <br />
    }
}


